#!/usr/bin/env node
var nopt = require('nopt');
var path = require('path');
var knownOpts = {
  exclude: Array
};
var shorthands = {
  x: '--exclude'
};
var parsed = nopt(knownOpts, shorthands, process.argv, 2);

require('../')(parsed, function(err, output) {
  if (err) {
    return process.exit(1);
  }

  console.log(output);
});